# ðŸ“Œ Piyasa Verilerini Ã‡ekme
def fetch_market_data():
    """Binance Testnet'ten BTC-USD piyasa verilerini Ã§eker ve SMA hesaplar"""
    data = yf.download("BTC-USD", period="1d", interval="1h")
    data["SMA_50"] = data["Close"].rolling(window=50).mean()
    data["SMA_200"] = data["Close"].rolling(window=200).mean()
    return data

# ðŸ“Œ AI Destekli Ticaret Stratejisi
def ai_trading_strategy():
    """SMA 50 ve SMA 200'e gÃ¶re AI tabanlÄ± ticaret stratejisi"""
    data = fetch_market_data()
    last_price = data["Close"].iloc[-1]
    
    if data["SMA_50"].iloc[-1] > data["SMA_200"].iloc[-1]:
        decision = "LONG"
    elif data["SMA_50"].iloc[-1] < data["SMA_200"].iloc[-1]:
        decision = "SHORT"
    else:
        decision = "NEUTRAL"

    stop_loss = last_price * 0.98  
    take_profit = last_price * 1.05  
    return decision, stop_loss, take_profit

# ðŸ“Œ Binance Testnet Ãœzerinde Ä°ÅŸlem AÃ§ma
def real_time_test():
    """GerÃ§ek zamanlÄ± olarak Binance Testnet Ã¼zerinde AI tabanlÄ± iÅŸlem aÃ§ar"""
    print("ðŸš€ Binance Testnet AI Botu BaÅŸlatÄ±ldÄ±...")
    
    while True:
        decision, stop_loss, take_profit = ai_trading_strategy()
        last_price = fetch_market_data()["Close"].iloc[-1]
        
        if decision == "LONG":
            order = exchange.create_market_buy_order("BTC/USDT", 0.01)
            print(f"ðŸ“ˆ LONG iÅŸlem aÃ§Ä±ldÄ±! Fiyat: {last_price}, Stop-Loss: {stop_loss}, Take-Profit: {take_profit}")
        elif decision == "SHORT":
            order = exchange.create_market_sell_order("BTC/USDT", 0.01)
            print(f"ðŸ“‰ SHORT iÅŸlem aÃ§Ä±ldÄ±! Fiyat: {last_price}, Stop-Loss: {stop_loss}, Take-Profit: {take_profit}")
        else:
            print("â³ AI henÃ¼z iÅŸlem yapmadÄ±. Bekleniyor...")

        time.sleep(60)  # âœ… Girinti hatasÄ± giderildi, kod artÄ±k Ã§alÄ±ÅŸacak!

# ðŸ“Œ Testi BaÅŸlat
real_time_test()
